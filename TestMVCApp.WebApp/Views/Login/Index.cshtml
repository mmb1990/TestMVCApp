@model TestMVCApp.WebApp.Models.UserMST

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserMST</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.email).ToString()))
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-3">
                    @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.userpassword).ToString()))
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.userpassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userpassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


